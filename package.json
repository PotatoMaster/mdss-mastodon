{
    "name": "mdss",
    "version": "1.0.0",
    "description": "Stylesheets for displaying and printing Markdown documents",
    "scripts": {
        "build-print-dev": "node-sass --include-path source source/print.scss build/mdss-print.css --output-style expanded",
        "build-print": "node-sass --include-path source source/print.scss build/mdss-print.min.css --output-style compressed",
        "build-screen-dev": "node-sass --include-path source source/screen.scss build/mdss-screen.css --output-style expanded",
        "build-screen": "node-sass --include-path source source/print.scss build/mdss-screen.min.css --output-style compressed",
        "build-dev": "npm run build-print-dev --silent && npm run build-screen-dev --silent && node-sass source/index.scss build/mdss.css --output-style expanded",
        "build": "npm run build-print --silent && npm run build-screen --silent && node-sass source/index.scss build/mdss.min.css --output-style compressed"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/vimtaai/mdss.git"
    },
    "keywords": [
        "markdown",
        "css",
        "screen",
        "print"
    ],
    "author": "MÃ¡rton Visnovitz <vimtaai@inf.elte.hu>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/vimtaai/mdss/issues"
    },
    "homepage": "https://github.com/vimtaai/mdss#readme",
    "devDependencies": {
        "node-sass": "^4.5.3",
        "nodemon": "^1.11.0"
    }
}
