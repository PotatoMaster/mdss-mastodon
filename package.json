{
  "name": "mdss",
  "version": "3.0.0",
  "description": "Responsive stylesheets for displaying and printing Markdown documents",
  "author": "MÃ¡rton Visnovitz <vimtaai@inf.elte.hu>",
  "license": "MIT",
  "repository": "github:vimtaai/mdss",
  "type": "module",
  "bin": "bin/mdss.js",
  "browser": "dist/mdss.min.css",
  "files": [
    "/src",
    "/bin",
    "/dist"
  ],
  "scripts": {
    "lint": "eslint bin/**.js",
    "prettier": "prettier -w ./{bin,src}/**/*.{js,scss}",
    "build": "node bin/mdss.js build -a -c src/config -o dist -n",
    "build:dev": "node bin/mdss.js build -d -a -c src/config -o dist -n",
    "watch": "watch \"npm run build\" src",
    "watch:dev": "watch \"npm run build:dev\" src",
    "prepare": "npm run build && npm run build:dev"
  },
  "dependencies": {
    "commander": "^2.20.0",
    "csso": "^3.5.1",
    "fs-extra": "^8.0.1",
    "normalize.css": "^8.0.1",
    "sass": "^1.20.1"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-config-problems": "^2.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "prettier": "^1.17.1",
    "watch": "^1.0.2"
  }
}
